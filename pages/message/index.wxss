/* page相当于html中的body */
page{ background: #eee; }
.message-item{
    margin: 20rpx;
    background: #fff;
    border: 1px #ccc solid;
    box-shadow: 1px 1px 2px #ddd;
    border-radius: 4px;
    padding: 0 30rpx;
}
.title{ font-weight: bold; padding-top: 20rpx; }
.date{
    font-size: 14px;
    padding: 10rpx 0;
    border-bottom: 1px #eee solid;
    margin-bottom: 20rpx;
}
.message-item image{ width: 100%; height: 300rpx; }
.desc{
    padding: 10rpx 0;
    border-bottom: 1px #eee solid;
}
.more{
    padding:20rpx 0;
    font-weight: bold;
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.more::after{
    display: block;
    content: "";
    width: 12px;
    height: 12px;
    border-right: 1px #999 solid;
    border-top:1px #999 solid;
    transform: rotate(45deg);
    margin-right: 6px;
}
