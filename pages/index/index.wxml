
<!-- indicator-dots:展示面板指示点
autoplay:自动切换 -->
<swiper 
indicator-dots="{{true}}" 
autoplay="{{true}}">
    <!-- block和view差不多，通常用于for循环 -->
    <block wx:for="{{banners}}" wx:key="index">
        <swiper-item>
            <image src="{{item.image_src}}" mode="aspectFill" class="banner">
            </image>
        </swiper-item>
    </block>
</swiper>


